// js/router.js (new file)
const Router = (function() {
    // View containers
    const dashboardView = document.getElementById('dashboardView');
    const metricsView = document.getElementById('metricsView');
    const userView = document.getElementById('userView');
    
    // Navigation links
    const navLinks = document.querySelectorAll('.nav-link');
    
    function initialize() {
        // Set up event listeners for navigation
        navLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const targetView = this.getAttribute('data-target');
                navigateTo(targetView);
            });
        });
        
        // Default to dashboard view
        navigateTo('dashboard');
    }
    
    function navigateTo(viewName) {
        // Hide all views
        dashboardView.classList.add('hidden');
        metricsView.classList.add('hidden');
        userView.classList.add('hidden');
        
        // Remove active class from all nav links
        navLinks.forEach(link => link.classList.remove('earworm-gradient', 'text-white'));
        navLinks.forEach(link => link.classList.add('text-gray-700', 'hover:bg-gray-100'));
        
        // Show selected view and highlight nav link
        if (viewName === 'metrics') {
            metricsView.classList.remove('hidden');
            document.querySelector('[data-target="metrics"]').classList.remove('text-gray-700', 'hover:bg-gray-100');
            document.querySelector('[data-target="metrics"]').classList.add('earworm-gradient', 'text-white');
        } else if (viewName === 'user') {
            userView.classList.remove('hidden');
            document.querySelector('[data-target="user"]').classList.remove('text-gray-700', 'hover:bg-gray-100');
            document.querySelector('[data-target="user"]').classList.add('earworm-gradient', 'text-white');
        } else {
            // Default to dashboard
            dashboardView.classList.remove('hidden');
            document.querySelector('[data-target="dashboard"]').classList.remove('text-gray-700', 'hover:bg-gray-100');
            document.querySelector('[data-target="dashboard"]').classList.add('earworm-gradient', 'text-white');
        }
    }
    
    return {
        initialize,
        navigateTo
    };
})();
